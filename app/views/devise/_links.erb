<%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
        <% provider_name = provider.to_s.titleize %>
        <% case provider_name %>
        <% when 'Facebook' %>
            <%= render :partial => 'layouts/login_with_facebook' %>
        <% else %>
            <%= link_to "Sign in with #{provider_name}", omniauth_authorize_path(resource_name, provider) %><br />
        <% end %>
    <% end -%>
<% end -%>