<% title 'Contact Us' %>
<h2>We would love to hear from you</h2>
<% unless flash[:error].nil? %>
    <div class="alert alert-error">
      <%= flash[:error] %>
      <% flash[:error] = nil %>
    </div>
<% end %>
<% unless flash[:success].nil? %>
    <div class="alert alert-success">
      <%= flash[:success] %>
      <% flash[:success] = nil %>
    </div>
<% end %>

<%= form_tag '' do |f| %>
    <%= label_tag 'Email' %>
    <%= text_field_tag :email, @email, :placeholder => 'Your email address' %>
    <%= label_tag 'Message' %>
    <%= text_area_tag :message, @message, :placeholder => 'Got admiration / criticism for CUl8r? Feel free to share with us. Or just say Hi!', :size => '25x10' %>
    <br/>
    <%= submit_tag 'Send' %>
<% end %>

