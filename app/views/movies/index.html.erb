<% title 'Movies' %>

<div class="row">
  <div class="movie_gallery span11 inner_content">
    <div class="featured-content">
      <div id="latest-movies" class="pull-left featured_column half-page">
        <h3 style="text-align: center">Added Recently</h3>
        <%= render :partial => 'thumbnails', :locals => {:movies => @latest_movies} %>
      </div>
      <div id="featured-movies" class="pull-right featured_column half-page">
        <h3 style="text-align: center">Popular</h3>
        <%= render :partial => 'thumbnails', :locals => {:movies => @recommended_movies} %>
      </div>
    </div>
    <div class="featured-content">
      <div id="genre-links"><%= render :partial => 'genre_link', :collection => @genres %></div>
      <%= render :partial => 'genre_movies_showcase' %>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(window).load(function () {
        $('#latest-movies').show();
    });
</script>
<%= render :partial => 'popup_javascript' %>